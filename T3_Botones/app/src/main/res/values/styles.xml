<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="switchNormal">
        <item name="android:colorControlActivated"> @color/switchOn </item>
    </style>

    <style name="SwitchAdv">
        <item name="android:thumbTint">@color/colores_sw</item>
        <item name="android:trackTint">@color/colores_sw</item>
        <item name="android:thumb">@drawable/barcelona</item>
    </style>

</resources>
